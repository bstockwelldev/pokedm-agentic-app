{
  "version": 2,
  "builds": [
    {
      "src": "api/agent.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["server/**"]
      }
    },
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/agent"
    },
    {
      "src": "/(.*)",
      "dest": "/client/$1"
    }
  ]
}
